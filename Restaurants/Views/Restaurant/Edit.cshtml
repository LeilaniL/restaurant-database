@{
  Layout = "_Layout";
}
<h1>All the Restaurants:</h1>
<hr>

<h1>Info about @Model["Restaurant"].GetName() Restaurant</h1>
<p>Location: @Model["Restaurant"].GetLocation()</p>

<form action = '/Cuisine/@Model["Cuisine"].GetId()/Restaurant/@Model["Restaurant"].GetId()' method = "post">
    <label for= "RestaurantName">Restaurant Name:</label>
    <input type = "text" name = "restaurantName">
    <label for= "Location">Location:</label>
    <input type = "text" name = "location">
    <input type = "hidden" name = "Cuisine" value = '@Model["Cuisine"].GetId()'>
    <button type = "submit">Add Restaurant</button>
</form>

<p><a href='/Cuisine/@Model["Cuisine"].GetId()/Restaurant/@Model["Restaurant"].GetId()/edit'>Edit a restaurant</a></p>
<p><a href='/showCuisine'>Return to Cuisine List</a></p>
<p><a href='/'>Return to Main Page</a></p>